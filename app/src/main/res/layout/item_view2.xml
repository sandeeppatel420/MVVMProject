<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="#C4C4C4"
            android:elevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/image_ImageView1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_TextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textColor="@android:color/black"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/price_TextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹ Price"
            android:layout_below="@id/name_TextView1"
            android:layout_marginStart="120dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/description_TextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@android:color/black"
            android:layout_below="@id/price_TextView1"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:maxLines="1"
            />
        <ImageView
            android:id="@+id/deleteItem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/delete_24"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>